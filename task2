#include <iostream>
using namespace std;
int main() {
    int students = 5, subjects = 4;
    int** marks = new int*[students];
    for (int i = 0; i < students; i++) {
        marks[i] = new int[subjects];
    }
    cout << "Enter marks of " << students << " students in " << subjects << " subjects:\n";
    for (int i = 0; i < students; i++) {
        cout << "Student " << i + 1 << ":\n";
        for (int j = 0; j < subjects; j++) {
            cout << "  Subject " << j + 1 << ": ";
            cin >> marks[i][j];
        }
    }
    int topperIndex = 0;
    int highestTotal = -1;
    cout << "\nTotal marks of each student:\n";
    for (int i = 0; i < students; i++) {
        int total = 0;
        for (int j = 0; j < subjects; j++) {
            total += marks[i][j];
        }
        cout << "Student " << i + 1 << ": " << total << endl;

        if (total > highestTotal) {
            highestTotal = total;
            topperIndex = i;
        }
    }
    cout << "\nAverage marks of each subject:\n";
    for (int j = 0; j < subjects; j++) {
        double sum = 0;
        for (int i = 0; i < students; i++) {
            sum += marks[i][j];
        }
        cout << "Subject " << j + 1 << ": " << (sum / students) << endl;
    }
    cout << "\nTopper student: Student " << topperIndex + 1 
         << " with total marks = " << highestTotal << endl;
    for (int i = 0; i < students; i++) {
        delete[] marks[i];
    }
    delete[] marks;
    return 0;
}
